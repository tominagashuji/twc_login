<body>

  <div class="container">
    <%= render 'header' %>
    <h1>つぶやき一覧</h1>
    <p><%= notice %></p>

    <div class="wrapper clearfix row">
      <table class="tbl">

        <tr>
          <th>内容</th>
        </tr>

        <% @blogs.each do |blog| %>
        <tr class="btn-group" role="group" aria-label="...">
          <th><%= blog.content %></th>
          <td button type="button" class="col-xs-12 col-sm-4 col-md-2 btn btn-info btn-sm">
            <%= link_to '詳細', blog_path(blog.id) %></td>

          <!--171214ブログモデルに存在するユーザーID とカレントユーザーが同じなら編集と削除ができるようにしたい-->
            <td button type="button" class="col-xs-12 col-sm-4 col-md-2 btn btn-warning btn-sm">
              <%= link_to '編集', edit_blog_path(blog.id), data: { confirm: '本当に編集していいですか？' } %></td>
            <td button type="button" class="col-xs-12 col-sm-4 col-md-2 btn btn-danger btn-sm">
              <%= link_to '削除', blog_path(blog.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>

        </tr>
        <% end %>
      </table>
      <%= render 'footer' %>
    </div>

  </div>
</body>

